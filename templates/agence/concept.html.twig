{% block javascripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Animation simple au scroll avec IntersectionObserver
    const animatedElements = document.querySelectorAll('.constat-content, .carte-concept-content, .menus-content, .surmesure-card, .pedagogie-content, .durable-content, .menu-card, .carte-item, .stat-block');

    if ('IntersectionObserver' in window) {
        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry, index) => {
                if (entry.isIntersecting) {
                    setTimeout(() => {
                        entry.target.classList.add('visible');
                    }, index * 100);
                    observer.unobserve(entry.target);
                }
            });
        }, { threshold: 0.1, rootMargin: '0px 0px -50px 0px' });

        animatedElements.forEach(el => {
            el.classList.add('animate-on-scroll');
            observer.observe(el);
        });
    }
});
</script>
{% endblock %}
